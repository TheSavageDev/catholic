datasource postgres {
  provider = "postgresql"
  url      = env("POSTGRESQL_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt DateTime @default(now())
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     String[]
  updatedAt DateTime @updatedAt
  username  String   @unique
}

model Book {
  chapterIds Chapter[]
  chapters   Int
  createdAt  DateTime  @default(now())
  id         String    @id @default(cuid())
  testament  String
  title      String
  updatedAt  DateTime  @updatedAt
  verses     Int
}

model Chapter {
  bookId    Book?    @relation(fields: [bookIdId])
  bookIdId  String?
  chapter   Int
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  title     String
  updatedAt DateTime @updatedAt
  verses    Int
}